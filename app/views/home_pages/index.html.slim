    form[method="POST" action="/test" ]
      .mb-4 = image_tag("MainPage.PNG", class: "mainImg")
      h2.Home_h2.mb-3.fw-normal
        | Please sign in
      .form-floating
        input#floatingInput.form-control[type="email" placeholder="name@example.com" required]
        label[for="floatingInput"]
          | Email address
      .form-floating
        input#floatingPassword.form-control[type="password" placeholder="Password" required pattern="^(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{10,}$" ]
        label[for="floatingPassword"]
          | Password
      .form-check.form-switch
        input#ShowSwitch.form-check-input[type="checkbox"]
        label.form-check-label[for="ShowSwitch" id="Switchlabel" ]
          | Show Password
      .container.col
        #message
          ul#letter[class="alert alert-danger" role="alert" ]
            b
              | A lowercase
            |  letter
          ul#capital[class="alert alert-danger" role="alert" ]
            b
              | A uppercase
            |  letter
          ul#number[class="alert alert-danger" role="alert" ]
            b
              |A number
          ul#specialChar[class="alert alert-danger" role="alert" ]
            b
              |A SpecialChar
          ul#length[class="alert alert-danger" role="alert" ]
            b
              | Minimum 10 characters
