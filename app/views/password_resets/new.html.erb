<% content_for :header do%>
  <%=render "layouts/header" %>
<%end %>

<div class="container whiteboard">
  <div class="row">
    <h1>Reset Password</h1>
  </div>
  <hr>
  <div class="row">
    <div class="from-group">
      <%= form_tag password_resets_path, :method => :post do %>
        <div class='field'>
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "but-better@group.de", required: true %>
        </div>
        <div class='actions'>
          <%= submit_tag "Reset Password", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <%= render "flash_notice" %>
  </div>
</div>
