<div id="userpage">
  <div id="user_information" class="gray-boxing">
    <span>Name:</span>
    <span><%= @current_user.username %></span>
    <span>Email:</span>
    <span><%= @current_user.email %></span>
    <span>last uploaded File:</span>
    <span><i><%= @last_uploaded_file %></i></span>
    <div id="chart">
      <%= metrics_graphic_for @upload_file_history, 
                              title: "Uploads", 
                              description: "This graphic shows a time-series of your uploads.", 
                              width: 600, 
                              height: 250, 
                              target: '#chart', 
                              x_accessor: 'date',
                              y_accessor: 'times',
                              time_format: '%Y'
      %>
    </div>
  </div>
</div>
