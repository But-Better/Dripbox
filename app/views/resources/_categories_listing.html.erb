<div id="categoryAreal">
  <% if @categories.empty? %>
    <p id="nothing_found">no categories found</p>
  <% else %>
    <div id="categoryList">
      <% @categories.each do |cat| %>
        <div id="cat_item">
          <i id="title"><%= cat.name %></i>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
