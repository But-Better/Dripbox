root=true

[*]charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{yml,yaml}]
trim_trailing_whitespace = false

[*.{rb,yml,yaml,feature,md,js}]
indent_style = space
indent_size = 2

[*.{erb,slim,sass,coffee}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
